TEMPLATE        = app

#!include config

# disable optimization under linux / egcs
release-linux:CXXFLAGS = 


irix:LIBS	+= -L../../lib -laimsalgo -laimsalgopub
darwin:LIBS	+= -L../../lib -laimsalgo -laimsalgopub

release-solaris:LIBS =					\
	-L../../lib/solaris -laimsalgo -laimsalgopub

debug-solaris:LIBS    = 				\
	-L../../lib/solaris -laimsalgo-debug -laimsalgopub-debug

release-linux:LIBS =					\
	-L../../lib/linux -laimsalgo -laimsalgopub

debug-linux:LIBS =					\
	-L../../lib/linux -laimsalgo-debug -laimsalgopub-debug

# seems to be needed here to anable proper multithreading
LIBS		+= -lpthread

#!include config-app-local
